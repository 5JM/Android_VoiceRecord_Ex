<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="40dp"
    android:layout_marginHorizontal="10dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/list_item_background"
            android:layout_width="match_parent"
            android:scaleX="0.9"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/icon_background_blue"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/content_text"
        android:layout_alignEnd="@id/content_text"
        />

    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="170dp"
        android:layout_alignStart="@id/container"
        android:layout_alignEnd="@id/container"
        android:layout_alignTop="@id/container"
        android:layout_alignBottom="@id/container"
        />

</RelativeLayout>